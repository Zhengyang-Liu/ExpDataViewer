@model IEnumerable<ExperimentsDataViewer.Models.RunningExp>

@{
    ViewBag.Title = "RunningExp";
}

@using (Html.BeginForm())
{
    if (Model.Count() == 0)
    {
        <div class="row">
            <div class="col-md-4">
                <p><a class="btn btn-success btn-lg" href="@Url.Action("StartExp")">Start Experiment</a></p>
            </div>
        </div>
    }
    else if (Model.Count() == 1)
    {
        <div class="row">
            <div class="col-md-3">
                <p><a class="btn btn-danger btn-lg" href="@Url.Action("FinishExp")">Finish Experiment</a></p>
            </div>
            <div class="col-md-4">
                <label>Running Experiment</label>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ExpNo)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.StartTime)
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ExpNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartTime)
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-4">
                <p>Something went wrong, there are multiple experiments running</p>
            </div>
        </div>
    }
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
